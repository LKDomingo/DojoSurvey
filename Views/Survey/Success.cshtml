@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="d-flex flex-column justify-content-center container">
        <h1 class="text-center">Dojo Survey</h1>
        <div class="border p-3">
            <h4 class="py-3" style="text-decoration: underline;">Submitted Info</h4>
            <div class="d-flex justify-content-start flex-fill mb-3">
                <div class="d-flex flex-column flex-fill">
                    <p>Name:</p>
                    <p>Dojo Location:</p>
                    <p>Favorite Language:</p>
                    <p>Comment:</p>
                </div>
                <div class="d-flex flex-column flex-fill">
                    <p>@Model.Name</p>
                    <p>@Model.Location</p>
                    <p>@Model.Language</p>
                    <p>@Model.Comment</p>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-info" href="/">Go Back</a>
            </div>
        </div>
    </div>
</body>
</html>