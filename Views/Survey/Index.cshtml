@model User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="d-flex flex-column justify-content-center container">
        <h1 class="text-center">Dojo Survey</h1>
        <div class="border p-3">
            <form action="process" method="post">
                <div class="form-group">
                    <label for="Name">Your Name:</label>
                    <input class="form-control" asp-for="Name">
                    <small><span class="text-danger" asp-validation-for="Name"></span></small>
                </div>
                <div class="form-group">
                    <label class="mt-3" for="Location">Dojo Location:</label>
                    <select class="form-control" asp-for="Location">
                        <option value="San Jose">San Jose</option>
                        <option value="Seattle">Seattle</option>
                        <option value="Taos">Taos</option>
                    </select>
                    <small><span class="text-danger" asp-validation-for="Location"></span></small>
                </div>
                <div class="form-group">
                    <label class="mt-3" for="Language">Favorite Language:</label>
                    <select class="form-control" asp-for="Language">
                        <option value="Python">Python</option>
                        <option value="JavaScript">JavaScript</option>
                        <option value="C#">C#</option>
                    </select>
                    <small><span class="text-danger" asp-validation-for="Language"></span></small>
                </div>
                <div class="d-flex flex-column">
                    <label class="mt-3" for="Comment">Comment (optional):</label>
                    <textarea class="form-control" asp-for="Comment" cols="3" rows="5"></textarea>
                    <small><span class="text-danger" asp-validation-for="Comment"></span></small>
                </div>
                <div class="d-flex justify-content-end">
                    <input class="btn btn-info mt-3" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
</body>

</html>